{
    "plugins": ["plugins/markdown"],
    "recurseDepth": 10,
    "source": {
        "include": ["./dist", "./README.md", "./package.json"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "destination": "./doc/",
        "readme": "./README.md",
        "recurse": true,
        "verbose": true,
        "theme_opts": {
            "default_theme": "light",
            "theme_opts": {
              "create_style": ".sidebar-title { font-size: 2rem }"
            }
        },
        "template": "node_modules/clean-jsdoc-theme"
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}
